---
import { getENV } from '@/lib/env'

let stars

try {
  const { stargazers_count } = await fetch('https://api.github.com/repos/rishi-raj-jain/itsmy.fyi', {
    headers: {
      Authorization: `Bearer ${getENV('GITHUB_API_TOKEN')}`,
      'Content-Type': 'application/json',
    },
  }).then((res) => res.json())
  stars = stargazers_count
} catch (e) {
  console.log(e.message || e.toString())
}
---

{
  stars && (
    <div class="mx-auto mt-24 w-full max-w-screen-xl px-2.5 sm:mt-36 md:px-20">
      <div class="mx-auto max-w-md text-center sm:max-w-xl">
        <>
          <h2 class="font-display bg-gradient-to-br from-blue-600 via-blue-900 to-blue-600 bg-clip-text text-4xl font-extrabold leading-tight text-transparent sm:text-5xl sm:leading-tight">
            Proudly open-source
          </h2>
          <p class="mt-5 text-gray-600 sm:text-lg">
            Our source code is available on GitHub - feel free to read, review, or contribute to it however you want!
          </p>
        </>
      </div>
      <div class="flex items-center justify-center py-10">
        <a href="https://github.com/rishi-raj-jain/itsmy.fyi" target="_blank" rel="noreferrer">
          <div class="flex items-center">
            <div class="flex h-10 items-center space-x-2 rounded-md border border-gray-600 bg-gray-800 p-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24" class="h-5 w-5 text-white">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              <p class="font-medium text-white">Star</p>
            </div>
            <div class="style_less_than relative ml-[0.45rem] flex h-[2.5rem] items-center rounded-r bg-black p-[1rem]">
              <p class="font-display font-medium text-white">{stars}</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  )
}
